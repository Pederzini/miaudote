<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="pageTitle" parent="mainText">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">@dimen/text_twenty</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blueTitle" parent="pageTitle">
        <item name="android:textSize">@dimen/text_eighteen</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="otherTitle" parent="mainText">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/text_twenty</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orangeTitle" parent="mainText">
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:textSize">@dimen/text_twenty</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="counterDashboard" parent="mainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_twelve</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputTitleText" parent="mainText">
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/main_gray</item>
        <item name="hintTextColor">@color/main_gray</item>
        <item name="boxStrokeColor">@color/main_purple</item>
    </style>

    <style name="inputValueText" parent="mainText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/text_fourteen</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="sideNoteText" parent="mainText">
        <item name="android:textSize">@dimen/text_twelve</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="regularText" parent="mainText">
        <item name="android:textSize">@dimen/text_sixteen</item>
    </style>

    <style name="regularTextBold" parent="mainText">
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallText" parent="mainText">
        <item name="android:textSize">@dimen/text_ten</item>
    </style>

    <style name="purpleButtonText" parent="mainText">
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="transparentButtonText" parent="mainText">
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_purple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/main_purple</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>